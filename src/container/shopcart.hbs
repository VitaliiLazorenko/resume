<div class='row mt-4 mb-4'>
    <div class='col-md-8'>
        <div class="ps-4">
            <h1 class="card-text">{{header.title}}</h1>
        </div>
    </div>
    <div class='col-md-4 pb-3'>
        <div class="mt-2 pe-4 text-end">
            <a class="btn btn-outline-secondary" href="{{header.button.link}}">{{header.button.text}}</a>
        </div>
    </div>
</div>

<hr />

<div class="mt-5">
    {{#each goodsBlock}}
        <div class="container">
            <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                    <div class="col-md-2">
                        <img src="{{image}}" alt="{{name}}" class="img-fluid">
                    </div>
                    <div class="col-md-4">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                    <div class="col-md-2">
                        <p>{{price.title}}</p>
                        <p>{{price.value}}</p>
                    </div>
                    <div class="col-md-2">
                        <p>{{amount}}</p>
                    </div>
                    <div class="col-md-2">
                        {{#each buttons}}
                        <button class="btn {{#if isPrimary}}btn-primary mb-3{{else}}btn-outline-danger{{/if}}">{{text}}</button>
                        {{/each}}
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
    {{/each}}
</div>

<hr />

<div class='row mt-4 mb-4'>
    <div class='col-md-8'>
        <div class="pt-1 ps-5">
            <h3 class="card-title mb-2">{{total.title}}</h3>
            <h1 class="card-text">{{total.amount}}</h1>
            <p class="card-text">{{total.delivery}}</p>
        </div>
    </div>
    <div class='col-md-4 pb-4'>
        <div class="mt-4">
            {{#each total.buttons}}
                <button class="btn {{#if isSuccess}}btn-success mb-3{{/if}}{{#if isOutline}}btn-outline-success{{/if}}">{{text}}</button>
            {{/each}}
        </div>
    </div>
</div>

<hr />

<section>
  <h3 class='text-center'>{{goodsOtherBlock.title}}</h3>
  <div class='goodsOtherBlock.cards'>
    <div class='row g-4 mt-4 mb-4'>
      {{#each goodsOtherBlock.cards}}
        <div class='col-md-4'>
          <div class='card mb-2'>
            <img
              src='{{this.image}}'
              class='card-img-top'
            />
            <div class='card-body'>
              <h5 class='card-title'>{{this.title}}
                {{#if isHot}}
                  <span
                    class='badge text-uppercase text-white text-bg-warning rounded-pill ms-1'
                  >Hot!</span>
                {{/if}}
                {{#if isNew}}
                  <span
                    class='badge text-bg-primary rounded-pill ms-1'
                  >New</span>
                {{/if}}
              </h5>
              <p class='card-text'>{{this.description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<hr />

<section>
  <div class='card text-bg-dark text-end mt-4 mb-4'>
    <div class='row g-0'>
      <div class='col-5 p-3 pt-4'>
        <h2>{{subscribe.header}}</h2>
        <p>{{subscribe.description}}</p>
      </div>
      <div class='col-7 p-4 pt-5'>
        {{#each subscribe.buttons}}
          <a
            class='btn btn-primary ms-2'
            href='{{this.link}}'
          >{{this.text}}</a>
        {{/each}}
      </div>
    </div>
  </div>
</section>

<hr />