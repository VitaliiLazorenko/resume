<section>
    <div class='card'>
        <div class='card-body'>
            <div class='nav'>
                <h2>ShopHome</h2>
                    <ul class="me-auto mb-2 mb-lg-0"></ul>
                        {{#each navigation.links}}
                        <li class="nav-item">
                            <a class='nav-link active' aria-current="page" href='{{this.href}}'>{{this.text}}</a></li>
                        {{/each}}
                    </ul>
                    <li class="nav-item">
                       <a class="nav-link disabled">{{navigation.Logo}}</a>
                    </li>  
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="mb-3"><h2 class="text-center">{{newsBlock.title}}</h2></div>
    <div class='row g-3'>
        {{#each newsBlock.cards}}
            <div class='col-3'>
                <div class="card text-bg-dark mb-2">
                    <div class="card-header">{{this.title}}
                        {{#if isTop}}
                            <span class="badge text-bg-success rounded-pill ms-1">Top</span>
                        {{/if}}
                        {{#if isNew}}
                            <span class="badge text-bg-danger rounded-pill ms-1">New</span>
                        {{/if}}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{this.description}}</p>
                        </div>
                </div>
            </div>    
        {{/each}}  
    </div>           
</section>

<hr />

<section>
  <ul class="nav nav-tabs">
    {{#each goodsBlock.tabs}}
      <li class="nav-item {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}">
        <a class="nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}" href="#">{{text}}</a>
      </li>
    {{/each}}
  </ul>
</section>

<section>
    <div class="goodsBlock.cards">
        <div class='row g-4 mt-1'>
            {{#each goodsBlock.cards}}
                <div class='col-md-4'>
                    <div class="card mb-2">
                        <img src='{{this.image}}' class="card-img-top">
                        <div class="card-body">
                        <h5 class="card-title">{{this.title}}
                            {{#if isHot}}
                                <span class="badge text-uppercase text-white text-bg-warning rounded-pill ms-1">Hot!</span>
                            {{/if}}
                            {{#if isNew}}
                                <span class="badge text-bg-primary rounded-pill ms-1">New</span>
                            {{/if}}
                        </h5>
                        <p class="card-text">{{this.description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>    
</section>

<hr />

<section>
    <div class="card text-bg-dark text-end mt-4 mb-4">
        <div class="row g-0">
            <div class="col-5 p-3 pt-4">    
                <h2>{{subscribe.header}}</h2>   
                <p>{{subscribe.description}}</p> 
            </div>       
            <div class="col-7 p-4 pt-5">
                {{#each subscribe.buttons}}
                <a class='btn btn-primary ms-2' href='{{this.link}}'>{{this.text}}</a>
                {{/each}}
            </div>              
        </div>
    </div>
</section>

<hr />

<section>
  <div class="card text-bg-success text-center mt-4 mb-4">
    <div class="card-body">
      <h2 class="mb-4">{{service.title}}</h2>
      <p class="mb-4">{{service.description}}</p>
      {{#each service.buttons}}
        <a class='btn btn-primary' href='{{this.link}}'>{{this.text}}</a>
      {{/each}}
    </div>
  </div>
</section>

<hr />

