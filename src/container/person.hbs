<div>
  <h1>{{person.name}}</h1>
  <p>Age: {{person.age}}</p>
  <p>Gender: {{person.gender}}</p>
  <p><em>Address:
      {{person.address.street}},
      {{person.address.city}},
      {{person.address.state}}
      {{person.address.zip}},
      {{person.address.country}}</em></p>
  <br />
  <hr />
  <h3>Education:</h3>
  <ul>
    {{#each person.education}}
      <li><strong>{{this.degree}}</strong>
        in
        {{this.major}}
        from
        {{this.university}}
        ({{this.graduationYear}})</li>
    {{/each}}
  </ul>
  <br />
  <h3>Work Experience:</h3>
  <ul>
    {{#each person.workExperience}}
      <li>
        <p><strong>{{this.title}}</strong>
          at
          {{this.company}}
          ({{this.startDate}}
          -
          {{this.endDate}})</p>
        <ul>
          {{#each this.responsibilities}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        <p><em>{{this.employees.length}}
            employees in
            {{this.industry}}, founded in
            {{this.year_founded}}</em></p>
      </li>
    {{/each}}
  </ul>
</div>