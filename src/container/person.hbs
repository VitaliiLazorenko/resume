<div>
  <h1>{{person.name}}</h1>
  <p>Age: {{person.age}}</p>
  <p>Gender: {{person.gender}}</p>
  <p><em>Address:
      {{person.address.street}},
      {{person.address.city}},
      {{person.address.state}}
      {{person.address.zip}},
      {{person.address.country}}</em></p>
  <br />
  <hr />
  <h3>Education:</h3>
  <ul>
    {{#each person.education}}
      <li><strong>{{this.degree}}</strong>
        in
        {{this.major}}
        from
        {{this.university}}
        ({{this.graduationYear}})</li>
    {{/each}}
  </ul>
  <br />
  <h3>Work Experience:</h3>
  {{#each person.workExperience}}
  <h3>{{this.company}}</h3>
  <p>{{this.title}}, {{this.startDate}} - {{this.endDate}}</p>
  <ul>
    {{#each this.responsibilities}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  <p>Year Founded: {{this.year_founded}}</p>
  <p>Industry: {{this.industry}}</p>
  <h4>Employees:</h4>
  <ul>
    {{#each this.employees}}
      <li>
        {{this.name}}, {{this.position}} - {{this.department}}
        <ul>
          {{#each this.projects}}
            <li>
              {{this.name}} - {{this.description}} ({{this.status}})
              <ul>
                {{#each this.teams}}
                  <li>{{this.team_name}} - {{this.team_leader.name}} ({{this.team_leader.title}})</li>
                  <ul>
                    {{#each this.team_members}}
                      <li>{{this.name}} - {{this.title}}</li>
                      <ul>
                        {{#each this.projects}}
                          <li>{{this.name}} - {{this.description}}</li>
                          <ul>
                            {{#each this.technologies}}
                              <li>{{this}}</li>
                            {{/each}}
                            <li>Team Members:</li>
                            <ul>
                              {{#each this.team_members}}
                                <li>{{this.name}} - {{this.title}}</li>
                              {{/each}}
                            </ul>
                          </ul>
                        {{/each}}
                      </ul>
                    {{/each}}
                  </ul>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
{{/each}}
