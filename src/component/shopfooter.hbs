<section>
  <div class='container'>
    <div class='row'>
      {{#each footer}}
        <div class='col-md-2'>
          <ul class='nav flex-column'>
            {{#each this}}
              <li class='nav-item'>
                {{#if this.link}}
                  <a
                    class='nav-link'
                    href='{{this.link}}'
                  >{{this.text}}</a>
                {{else}}
                  <a
                    class='nav-link disabled'
                  >{{this.text}}</a>
                {{/if}}
              </li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </div>
  </div>
</section>